(defun go-to-speedbar ()
  (interactive)
  (let ((f-name (buffer-name)))
    (sr-speedbar-open)
    (sr-speedbar-select-window)
    (goto-line 1)
    (search-forward-regexp (concat f-name "$"))
    (speedbar-expand-line)
    ))
(global-set-key "\C-cs" 'go-to-speedbar)

